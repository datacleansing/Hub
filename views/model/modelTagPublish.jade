extends base

block content
  .col-md-8
    form(
      action= publishUri
      method="POST")
      .form-group
        span(class="glyphicon glyphicon-asterisk")
        label(for="nameInput") Name:
        input(
          require="true"
          type="text"
          class="form-control"
          name="name"
          id="nameInput"
          placeholder="Service's alias"
          value= model.id + "-" + tag.id + "-Service")
      .form-group
        span(class="glyphicon glyphicon-asterisk")
        label(for="algInput") Algorithm:
        input(
          require="true"
          type="text"
          class="form-control"
          name="algorithm"
          id="algInput"
          placeholder="Algorithm which the model could be applied to")
      .form-group
        label(for="descriptionInput") Description:
        textarea(
          type="text"
          class="form-control"
          row="6"
          name="description"
          id="descriptionInput")
      button(type="submit" class="btn btn-default") Publish
