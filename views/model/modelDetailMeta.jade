extends modelDetailBase

block model_detail
  table(class="table table-hover")
    tr
      td
        p Name:
      td
        p= model.id
    tr
      td
        p Data Type:
      td
        p= model.datatype
    tr
      td
        p Domain:
      td
        p= model.domain
    tr
      td
        p Locale:
      td
        p= model.locale
    tr
      td
        p Description:
      td
        p= model.description

block actionContent
  div(class="panel panel-default")
    .panel-body
      ul(class='list-group')
        a(
          class='list-group-item'
          href= URI_REPO + repoId + URI_MODELS + "/" + model.id + "/meta")  Update Metadata
