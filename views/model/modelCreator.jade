extends base

block content
  .col-md-8
    form(
      action= URI_REPO + repoId + URI_MODELS
      method="POST")
      .form-group
        span(class="glyphicon glyphicon-asterisk")
        label(for="nameInput") Name:
        input(
          require="true"
          type="text"
          class="form-control"
          name="id"
          id="nameInput"
          placeholder="Unique Name in the Repository")

      include ../commonForm.jade
      button(type="submit" class="btn btn-default") Submit
